<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PetRegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="top"
                android:layout_marginLeft="50dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Na"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/brown_pachontli" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="me"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/green_pachontli" />

            </LinearLayout>

            <EditText
                android:id="@+id/txtNamePetRegister"
                android:layout_width="303dp"
                android:layout_height="47dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/edit_text_view"
                android:ems="10"
                android:inputType="text"
                android:maxLines="1"
                android:textAlignment="center"
                android:textColor="@color/black" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="top"
                android:layout_marginLeft="50dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gen"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/brown_pachontli" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="der"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/green_pachontli" />

            </LinearLayout>

            <EditText
                android:id="@+id/txtGenderPetRegister"
                android:layout_width="303dp"
                android:layout_height="47dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/black"
                android:background="@drawable/edit_text_view"
                android:ems="10"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:inputType="text"
                android:maxLines="1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="top"
                android:layout_marginLeft="50dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Spe"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/brown_pachontli" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="cie"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/green_pachontli" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100dp"
                    android:text="Bre"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/brown_pachontli" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ed"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/green_pachontli" />

            </LinearLayout>

            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_gravity="top"
            android:layout_marginLeft="50dp">

                <EditText
                    android:id="@+id/txtSpeciePetRegister"
                    android:layout_width="150dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:background="@drawable/edit_text_view"
                    android:ems="10"
                    android:layout_gravity="left"
                    android:inputType="text"
                    android:maxLines="1"/>

                <EditText
                    android:id="@+id/txtBreedPetRegister"
                    android:layout_width="150dp"
                    android:layout_height="47dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:background="@drawable/edit_text_view"
                    android:ems="10"
                    android:layout_gravity="left"
                    android:inputType="text"
                    android:maxLines="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="top"
                android:layout_marginLeft="50dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/brown_pachontli" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ge"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/green_pachontli" />

            </LinearLayout>

            <EditText
                android:id="@+id/txtAgePetRegister"
                android:layout_width="303dp"
                android:layout_height="47dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:background="@drawable/edit_text_view"
                android:ems="10"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:inputType="number"
                android:maxLines="1"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="top"
                android:layout_marginLeft="50dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="We"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/brown_pachontli" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ight"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/green_pachontli" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" (kg)"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/brown_pachontli" />

            </LinearLayout>

            <EditText
                android:id="@+id/txtWeightPetRegister"
                android:layout_width="303dp"
                android:layout_height="47dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:background="@drawable/edit_text_view"
                android:ems="10"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:maxLines="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="top"
                android:layout_marginLeft="50dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="He"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/brown_pachontli" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ight"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/green_pachontli" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=" (m)"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/brown_pachontli" />

            </LinearLayout>

            <EditText
                android:id="@+id/txtHeightPetRegister"
                android:layout_width="303dp"
                android:layout_height="47dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:background="@drawable/edit_text_view"
                android:ems="10"
                android:gravity="center"
                android:inputType="numberDecimal"
                android:maxLines="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="top"
                android:layout_marginLeft="50dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Des"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/brown_pachontli" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="crip"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/green_pachontli" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="tion"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/brown_pachontli" />

            </LinearLayout>

            <EditText
                android:id="@+id/txtDescriptionPetRegister"
                android:layout_width="303dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:gravity="top"
                android:layout_marginTop="5dp"
                android:inputType="textMultiLine"
                android:autoSizeMaxTextSize="100sp"
                android:autoSizeMinTextSize="15sp"
                android:autoSizeStepGranularity="2sp"
                android:autoSizeTextType="uniform"
                android:textColor="@color/black" />

            <Button
                android:id="@+id/btnRegiterRegister"
                android:layout_width="30mm"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/brown_pachontli"
                android:text="Register"
                android:textColor="@color/white"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>